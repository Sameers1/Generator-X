@page "/dice"

<MudPaper Height="100vh" Width="100%" Class="d-flex justify-center align-center" Style="background-color: #1f1f1f; color: white;">
    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-center">
        <img src="@($"images/dice-{rngDice}.png")" alt="Number @rngDice" class="mt-4" width="100" />
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <!-- Title -->
        <MudText Class="mb-1" Variant="Variant.H1" Align="Align.Center" Style="font-weight: 600; color: gold;">
            Roll Dice
        </MudText>

        <!-- Display Random Number -->
        <MudTextField @bind-Value="rngDice" Label="Randomized Number" ReadOnly="true" Variant="Variant.Outlined" Class="mb-4" Style="background-color: #333333; border-color: gold; color: white; font-size: 1.5rem; text-align: center;" />

        <MudButton @onclick="rollDice" Color="Color.Primary" Variant="Variant.Filled" FullWidth="false" Style="background-color: darkseagreen; color: white; font-size: 1.1rem; border-radius: 8px;">
            Rolling Dice
        </MudButton>
    </MudContainer>
</MudPaper>

@code {
    private int rngDice = 0;
    private async Task rollDice()
    {
        for (int i = 0; i < 20; i++)
        {
            await Task.Delay(50);
            Random random1 = new Random();
            rngDice = random1.Next(1, 6);
            StateHasChanged();
        }

        Random random = new Random();
        rngDice = random.Next(1, 6);
    }
}
